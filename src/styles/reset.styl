@import '/src/styles/_variables'

*
  padding 0
  margin 0
  box-sizing border-box

html
  overflow-x hidden
  font-family $primary-font-family

body,
html
  height 100%

body
  color $color-dark
  font-size 14px

a
  text-decoration none
  color $color-dark
  transition color $transition-time

  &:hover
    color $color-primary

h1,
h2,
h3,
h4,
h5,
h6
  font-family $secondary-font-family
  font-weight 400

h1
  font-size 24px
  line-height 26px

  +above($breakpoints.lg)
    font-size 32px
    line-height 36px

h2
  font-size 22
  line-height 24px

  +above($breakpoints.lg)
    font-size 30px
    line-height 32px
