.app-menu-button
  width 40px
  height 40px
  display flex
  align-items center
  justify-content center

  +above($breakpoints.lg)
    width 101px
    height 48px

  &__inner
    width 22px
    height 13px
    display flex
    flex-direction column
    justify-content space-between
    flex-shrink 0

    +above($breakpoints.lg)
      width 41px
      height 16px

  &__line
    display block
    width 22px
    height 2px
    background-color currentColor
    border-radius 1px
    transition all $transition-time

    +above($breakpoints.lg)
      width 38px

    &--2
      width 15px

      +above($breakpoints.lg)
        width 24px

  &--active
    background-color #E8E8E8 !important
    color $color-dark !important

  &--active &__line--2
    opacity 0

  &--active &__line--1
    width 110%
    transform rotate(45deg) translate(1px, -5px)
    transform-origin top left

    +above($breakpoints.lg)
      width 100%
      transform rotate(20deg)

  &--active &__line--3
    width 110%
    transform rotate(-45deg) translate(1px, 5px)
    transform-origin bottom left

    +above($breakpoints.lg)
      width 100%
      transform rotate(-20deg)
