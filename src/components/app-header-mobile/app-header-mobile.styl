.app-header-mobile
  display flex
  flex-direction column
  gap 10px
  background-color $color-white
  padding-bottom 24px
  position relative

  +above($breakpoints.lg)
    display none

  &__bar
    background-color $color-secondary

  &__bar-wrapper
    padding-top 4px
    padding-bottom 4px
    display flex
    align-items center
    justify-content space-between

  &__row
    display flex
    align-items center
    justify-content space-between

  &__buttons
    display flex
    gap 6px

  &__dropdown
    opacity 0
    visibility hidden
    transform scale(0.97)
    width 100%
    position absolute
    top 100%
    left 0
    padding-top 8px
    background-color $color-white
    transition all $transition-time

    &--show
      opacity 1
      visibility visible
      transform scale(1)

  &__main
    display flex
    flex-direction column
    gap 24px

  &__location
    display flex
    flex-direction column
    gap 8px

  &__logo
    display block

  &__info
    display flex
    align-items end
    justify-content space-between

  &__action
    .ui-button
      display flex
      justify-content center
      width 100%

  &__links
    padding 16px 0
    list-style none
    display flex
    flex-direction column
    gap 6px

  &__link
    font-size 16px
    padding 10px 0
    display block
    border-bottom 1px solid #E8E8E8
