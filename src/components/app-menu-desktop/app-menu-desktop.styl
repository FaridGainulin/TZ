.app-menu-desktop
  position relative
  width 338px

  &__list
    list-style none

  &__item:hover &__children
    visibility visible
    opacity 1
    transform translateX(0)

  &__link
    position relative
    font-size 16px
    padding 13px 50px 13px 30px
    display flex
    align-items center
    gap 16px
    border-bottom 1px solid #F3F3F3
    transition all $transition-time

    &:hover
      border-color transparent
      background-color #F3F3F3

      & ^[0]__arrow
        color #9DBDF9
        stroke-width 2px

  &__icon svg
    width 24px
    height 24px
    color #9DBDF9

  &__arrow
    width 24px
    height 24px
    position absolute
    right 20px
    top 0
    bottom 0
    margin auto
    transition all $transition-time

  &__children
    height 100%
    position absolute
    left 100%
    top 0
    visibility hidden
    opacity 0
    transform translateX(-10%)
    transition all $transition-time
    transition-delay 0.1s
